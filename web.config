<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="FastCgiModule" resourceType="Unspecified"/>
    </handlers>
    <fastCgi>
      <application 
        fullPath="D:\home\Python311\python.exe"
        arguments="-m uvicorn app:app --host 0.0.0.0 --port %HTTP_PLATFORM_PORT% --workers 4"
        maxInstances="4"
        idleTimeout="600">
        <environmentVariables>
          <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot"/>
        </environmentVariables>
      </application>
    </fastCgi>
  </system.webServer>
</configuration>
                  stdoutLogEnabled="true"
                  stdoutLogFile="%HOME%\LogFiles\python.log"
                  startupTimeLimit="300">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PYTHONPATH" value="%HOME%\site\wwwroot" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
