<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
  <httpPlatform processPath="%home%\Python311\python.exe"
          arguments="-m uvicorn app:app --host 0.0.0.0 --port %HTTP_PLATFORM_PORT% --workers 1"
                  stdoutLogEnabled="true"
                  stdoutLogFile="\\?\%home%\LogFiles\stdout.log">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="%home%\site\wwwroot" />
        <environmentVariable name="PYTHON_ENABLE_WORKER_MP" value="1" />
    <environmentVariable name="WEB_CONCURRENCY" value="1" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>
